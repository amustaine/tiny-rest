{
    "name": "amustaine/tiny-rest",
    "description": "A light rest api framework, fork of RuSS-B/tiny-rest",
    "type": "library",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "pagerfanta/pagerfanta": "^4.3.1",
        "doctrine/common": "^3.4",
        "doctrine/dbal": "4.0.*",
        "symfony/validator": "^4.0|^5.0|^6.0|^7.0",
        "doctrine/orm": "^2.15|^3.0.0",
        "symfony/property-access": "^4.0|^5.0|^6.0|^7.0",
        "symfony/http-foundation": "^4.0|^5.0|^6.0|^7.0"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "*",
        "doctrine/data-fixtures": "^1.3",
        "symfony/framework-bundle": "^4.0|^5.0|^6.0|^7.0",
        "phpunit/phpunit": "^9"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Alexey Buturlakin",
            "email": "alexbuturlakin@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {"TinyRest\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {
            "TinyRest\\Tests\\": "tests/"
        }
    }
}
